{
  "compilerOptions": {
    "moduleResolution": "nodenext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "esnext",
    "outDir": "./dist",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src"]
}
